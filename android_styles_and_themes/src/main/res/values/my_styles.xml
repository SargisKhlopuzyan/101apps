<resources>

    <style name="TextBorder" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>

    <style name="TextBorder.Normal">
        <item name="android:textStyle">normal</item>
    </style>


    <style name="CheckMate" parent="TextBorder.Bold.Medium.Black">
    </style>


    <style name="TextBorder.Normal.Large">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextBorder.Normal.Large.Blue">
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="TextBorder.Normal.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBorder.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBorder.Bold.Medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBorder.Bold.Medium.Black">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextBorder.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">#FF7F50</item>
    </style>

    <style name="SystemStyleMediumText" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="ParentChild">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
