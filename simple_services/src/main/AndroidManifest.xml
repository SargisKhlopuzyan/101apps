<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.simple_services">

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForegroundActivity"
            android:label="Foreground Activity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".DisplayActivity"
            android:label="Display Activity"
            android:screenOrientation="portrait"></activity>

        <service
            android:name=".MySimpleService"></service>
        <service
            android:name=".MyForegroundService"></service>
    </application>

</manifest>